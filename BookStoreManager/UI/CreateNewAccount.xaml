<Window x:Class="BookStoreManager.UI.CreateNewAccount"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookStoreManager.UI"
        mc:Ignorable="d"
        Title="Create New Account" Height="250px" Width="400px">
    <Grid>
        <Border>
            <StackPanel Margin="10" VerticalAlignment="Center">
                <TextBlock Text="Username:" Margin="0,0,0,5"/>
                <TextBox x:Name="txtUsername" Margin="0,0,0,5"/>
                <TextBlock Text="Password:" Margin="0,0,0,5"/>
                <PasswordBox x:Name="txtPassword" Margin="0,0,0,5"/>
                <TextBlock Text="Fullname:" Margin="0,0,0,5"/>
                <TextBox x:Name="txtFullname" Margin="0,0,0,10"/>
                
                <Button x:Name="btnCreate" Content="Create" Click="btnCreate_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
