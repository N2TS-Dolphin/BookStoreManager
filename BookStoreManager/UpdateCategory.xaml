<Window x:Class="BookStoreManager.UpdateCategory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookStoreManager"
        mc:Ignorable="d"
        Title="UpdateCategory" Height="150" Width="350"
        Loaded="Window_Loaded">
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock FontSize="15">
            <Run Text="Chỉnh sửa danh mục ID: "/>
            <Run Text="{Binding CategoryID}"/>
        </TextBlock>
        <StackPanel Orientation="Horizontal" Margin="10">
            <Label Content="Tên danh mục:"/>
            <TextBox x:Name="tbox" Text="{Binding CategoryName}" Width="200"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Ok" IsDefault="True" Width="50" Margin="0,0,10,0" Click="Button_Click"/>
            <Button Content="Cancel" IsCancel="True" Width="50" Margin="10,0,0,0"/>
        </StackPanel>
    </StackPanel>
</Window>
