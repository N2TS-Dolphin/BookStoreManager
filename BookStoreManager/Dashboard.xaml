<Window x:Class="BookStoreManager.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookStoreManager"
        mc:Ignorable="d"
        Title="Dashboard" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Định nghĩa hai cột với độ rộng tỷ lệ -->
            <ColumnDefinition Width="30*" MaxWidth="400px"/>
            <ColumnDefinition Width="70*"/>
        </Grid.ColumnDefinitions>

        <!-- Cột 1: Điều hướng -->
        <local:SlideBarDashBoard/>
        <!-- Cột 2: Thông tin -->
        <StackPanel Grid.Column="1" Background="#EAEAEA">
            <!-- Thêm các điều khiển để hiển thị thông tin ở đây -->
            <TextBlock Text="Thông tin chi tiết sẽ được hiển thị ở đây"/>
        </StackPanel>
    </Grid>
</Window>
